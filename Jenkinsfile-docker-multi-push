pipeline {
  agent any

  stages {
    
    stage('Build Image') {
      steps {
      sh "docker build -t reumaakhtar/request-logger:${env.BUILD_ID} -f Dockerfile-multi ."
      sh "docker tag reumaakhtar/request-logger:${env.BUILD_ID} reumaakhtar/request-logger:latest"
      }
    }
    
  }

  post {
    success {
      withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
        sh "docker login -u ${USERNAME} -p ${PASSWORD}"
        sh "docker push reumaakhtar/request-logger:${env.BUILD_ID}"
        sh "docker push reumaakhtar/request-logger:latest"
      }
    }
  }
}
